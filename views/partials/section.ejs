<section class="section">
  <div class="container-fluid">
    <div class="row">
      <div class="col section-title">
        <% if (requestURL == 1 ) { %>
          <h1><%= date %></h1>
        <% } else { %>
          <h1>Work List</h1>
      <%  } %>
      </div>
    </div>
  </div>
 <div class="container ">
    <div class="row ">
    <div class="col section-list "> 
       
        <% if (fruits.length !== 0) { %>
          <% for (let i = 0; i < fruits.length; i++) { %>
            
            <div class="item">
            <input type="checkbox" class="checkbox-item" >            
            <h5><%= fruits[i] %></h5>
          
           </div>
          
          <% }  %>
        <%  }else { %>
          
        <% } %>
      </div>
    </div>
    
    
    
  
  
  <div class="row" >
    <div class="col section-list ">
      <% if (requestURL == 1 ) { %>  
            <form action="/" method="post">
          
          <input type="text" id="fname" name="fName" placeholder="new item">
          <% } if (requestURL == 2) { %>
           <form action="/works" method="post">  
            <input type="text" id="fname" name="lName" placeholder="new item">
                     
           <% }else{} %>
          <button type="submit">+</button>
        </form>
      </div>    
    </div>
  </div>

 
</section>
<script>
  // Checkbox elementlerini alalım
  const checkboxes = document.querySelectorAll('.checkbox-item');

  // Her bir checkbox için event listener ekleyelim
  checkboxes.forEach((checkbox, index) => {
    checkbox.addEventListener('change', () => {
      // Checkbox'ın checked durumuna göre h5 elementine çizgi ekleyelim veya kaldıralım
      const h5Element = document.querySelectorAll('h5')[index];
      if (checkbox.checked) {
        h5Element.style.textDecoration = 'line-through';
      } else {
        h5Element.style.textDecoration = 'none';
      }
    });
  });
</script>